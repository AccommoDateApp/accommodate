{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6"
    ],
    "types": [
      "reflect-metadata"
    ],
    "moduleResolution": "node",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "module": "commonjs",
    "strict": true,
    "strictNullChecks": false,
    "target": "es5",
    "outDir": "dist/"
  },
  "include": [
    "types/index.d.ts",
    "src/**/*.ts"
  ]
}
